@using Web_153503_Kachanovskaya.Domain.Models;

@model ListModel<Product>
@{
    ViewData["Title"] = "index";

    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();

    var categories = ViewData["Categories"] as List<Category>;
    var currentCategory = ViewData["CurrentCategory"] as Category;

    var prevPage = Model.CurrentPage == 1? 1 : Model.CurrentPage - 1;
    var nextPage = Model.CurrentPage == Model.TotalPages ?
            Model.TotalPages : Model.CurrentPage + 1;
}

<!-- Выбор категории -->

<div class="col-2">
    <ul class="nav ">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
               data-bs-toggle="dropdown"
               href="#"
               role="button"
               aria-expanded="false">
                <b>@(currentCategory?.Name ?? "Все")</b>
            </a>

            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                       asp-controller="Product"
                       asp-route-category=@null><b>Все</b></a>
                </li>
                @foreach (var category in categories!)
                {
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Product"
                           asp-route-category="@category.NormalizedName">
                            @category.Name
                        </a>
                    </li>
                }
            </ul>
        </li>
    </ul>
</div>
<!-- Выбор категории - конец -->


<!--Вывод карточек-->
<div class="col-10 row">
    @foreach (var product in Model.Items)
    {
        <div class="col-md-4 mt-4">
            <div class="card mb-4">
                <img src="@product.ImgPath" class="catalog-img mx-auto">
                <div class="card-body">
                    <h5 class="card-title mx-auto">@product.Name</h5>
                    <div class="card-text mx-auto">@product.Price р.</div>
                    <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" asp-route-returnurl="@returnUrl"
                        class=" btn btn-primary mt-2">Go somewhere</a>
                </div>
            </div>
        </div>
    }
</div>
<!--Вывод карточек - конец-->

<!--Пагинация -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-controller="Product" asp-action="Index"
                   asp-route-category="@(currentCategory?.NormalizedName)"
                   asp-route-pageNum="@prevPage">Назад</a>
            </li>


            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       asp-controller="Product" asp-action="Index"
                       asp-route-category="@(currentCategory?.NormalizedName)"
                       asp-route-pageNum="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-controller="Product" asp-action="Index"
                   asp-route-category="@(currentCategory?.NormalizedName)"
                   asp-route-pageNum="@nextPage">Вперед</a>
            </li>
        </ul>
    </nav>

}

